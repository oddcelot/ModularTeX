{
    "files.exclude": {
        "*.aux": true,
        "*.bbl": true,
        "*.blg": true,
        "*.idx": true,
        "*.ind": true,
        "*.lof": true,
        "*.lot": true,
        "*.out": true,
        "*.toc": true,
        "*.acn": true,
        "*.acr": true,
        "*.alg": true,
        "*.glg": true,
        "*.glo": true,
        "*.gls": true,
        "*.ist": true,
        "*.fls": true,
        "*.log": true,
        "*.xdv": true,
        "*.fdb_latexmk": true,
        "*.synctex.gz": true,
        "*.synctex(busy)": true,
        "*.pdf": true, // hide all .pdf in root
        "**/*.pdf": false, // show .pdf in subfolders
        "LICENSE": true, // hide license file
    },
    "editor.cursorBlinking": "solid",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "editor.tabCompletion": true,
    "editor.snippetSuggestions": "top",
    "cSpell.enabled": true,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
    ]
}